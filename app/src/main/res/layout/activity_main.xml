<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <TabHost
        android:id="@+id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contextClickable="false" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="150dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="30dp"
                                android:src="@mipmap/logo" />

                            <EditText
                                android:drawablePadding="8dp"
                                android:id="@+id/id"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginTop="25dp"
                                android:layout_marginRight="25dp"
                                android:background="@drawable/draw1"
                                android:drawableLeft="@mipmap/idnum"
                                android:hint="   ##############"
                                android:paddingLeft="20dp"
                                android:textColor="@android:color/black"
                                android:lines="1"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:maxLength="14"
                                android:inputType="numberDecimal"/>

                            <Button
                                android:layout_width="200dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/draw6"
                                android:text="Check it"
                                android:onClick="check"
                                android:textAllCaps="false"
                                android:textColor="@android:color/white"
                                android:textSize="20dp" />

                            <ImageView
                                android:layout_width="80dp"
                                android:layout_height="50dp"
                                android:id="@+id/checkImage"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="25dp"
                                android:src="@mipmap/grlamp" />


                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <EditText
                                android:drawablePadding="8dp"
                                android:id="@+id/name"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/draw1"
                                android:drawableLeft="@mipmap/username"
                                android:hint="   User Name"
                                android:paddingLeft="20dp"
                                android:textColor="@android:color/black"
                                android:lines="1"
                                android:singleLine="true"
                                android:maxLines="1"/>

                            <EditText
                                android:drawablePadding="8dp"
                                android:id="@+id/nid"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/draw1"
                                android:drawableLeft="@mipmap/address"
                                android:hint="   ID"
                                android:paddingLeft="20dp"
                                android:textColor="@android:color/black"
                                android:lines="1"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:maxLength="14"
                                android:inputType="numberDecimal"/>

                            <EditText
                                android:drawablePadding="16dp"
                                android:id="@+id/address"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/draw1"
                                android:drawableLeft="@mipmap/address"
                                android:hint="   Address"
                                android:paddingLeft="20dp"
                                android:textColor="@android:color/black"
                                />

                            <EditText
                                android:drawablePadding="8dp"
                                android:id="@+id/age"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/draw1"
                                android:drawableLeft="@mipmap/age"
                                android:hint="   Age"
                                android:paddingLeft="20dp"
                                android:textColor="@android:color/black"
                                android:maxLength="3"
                                android:inputType="numberDecimal"/>

                            <EditText
                                android:drawablePadding="8dp"
                                android:id="@+id/phone"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/draw1"
                                android:drawableLeft="@mipmap/ae"
                                android:hint="   Phone Number"
                                android:paddingLeft="20dp"
                                android:textColor="@android:color/black"
                                android:inputType="phone"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">


                                <ImageView
                                    android:id="@+id/ap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/ap" />

                                <ImageView
                                    android:id="@+id/bp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:src="@mipmap/bp" />

                                <ImageView
                                    android:id="@+id/abp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:src="@mipmap/abp" />

                                <ImageView
                                    android:id="@+id/op"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:src="@mipmap/op" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/am"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/am" />

                                <ImageView
                                    android:id="@+id/bm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:src="@mipmap/bm" />

                                <ImageView
                                    android:id="@+id/abm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:src="@mipmap/abm" />

                                <ImageView
                                    android:id="@+id/om"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:src="@mipmap/om" />

                            </LinearLayout>


                            <EditText
                                android:drawablePadding="8dp"
                                android:id="@+id/history"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/draw1"
                                android:drawableLeft="@mipmap/historyblood"
                                android:hint="   Bag code"
                                android:paddingLeft="20dp"
                                android:textColor="@android:color/black" />
                            <CheckBox
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Allow points donation"
                                android:onClick="onCheckboxClicked"
                                android:layout_gravity="center_horizontal"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="35dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/draw6"
                                android:text="Enter"
                                android:onClick="add"
                                android:textColor="@android:color/white" />

                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="130dp"
                                android:id="@+id/pic"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="6dp"
                                android:src="@mipmap/userpic" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text=""
                                android:id="@+id/dName"
                                android:textColor="@android:color/black"
                                android:textSize="15dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/draw5"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@mipmap/idnum" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text=""
                                        android:id="@+id/dId"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp"
                                        android:layout_marginTop="3dp"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/draw5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Blood Features "
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text=""
                                        android:id="@+id/dType"
                                        android:textStyle="bold"
                                        android:textColor="@android:color/black"
                                        android:textSize="30dp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/draw5"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="@string/mar"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text=""
                                        android:id="@+id/dDonations"
                                        android:textStyle="bold"
                                        android:textColor="@android:color/black"
                                        android:textSize="30dp" />


                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="20dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/draw5"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@mipmap/ae" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:layout_gravity="center_horizontal"
                                        android:text=""
                                        android:id="@+id/dPhone"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/draw5"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@mipmap/address" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="5dp"
                                        android:text=""
                                        android:id="@+id/dAddress"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:background="@drawable/draw5"
                                    android:orientation="vertical">


                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@mipmap/historyblood" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="Not Found "
                                        android:layout_marginTop="2dp"
                                        android:textColor="@android:color/black"
                                        android:textSize="12dp" />

                                </LinearLayout>

                            </LinearLayout>



                            <!--<LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/draw5"
                                android:orientation="horizontal"
                                android:layout_gravity="center_horizontal">

                                <TextView
