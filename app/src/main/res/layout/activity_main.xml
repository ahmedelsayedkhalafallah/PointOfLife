                            </LinearLayout> -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="56dp">

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="8dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:src="@mipmap/blood" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Blood Amount    " />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:orientation="horizontal">

                                        <Button
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="center_horizontal"
                                            android:background="@drawable/draw6"
                                            android:text="-"
                                            android:textColor="@android:color/white"
                                            android:textSize="20dp"
                                            android:layout_marginBottom="10dp"
                                            android:onClick="decrease"/>

                                        <EditText
                                            android:drawablePadding="8dp"
                                            android:id="@+id/amount"
                                            android:inputType="numberDecimal"
                                            android:text="500"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:enabled="false"/>

                                        <Button
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:layout_gravity="center_horizontal"
                                            android:background="@drawable/draw6"
                                            android:text="+"
                                            android:textColor="@android:color/white"
                                            android:textSize="20dp"
                                            android:layout_marginBottom="10dp"
                                            android:onClick="increase"
                                            />
                                    </LinearLayout>

                                    <EditText
                                        android:drawablePadding="8dp"
                                        android:id="@+id/bagCode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:lines="1"
                                        android:singleLine="true"
                                        android:maxLines="1"
                                        android:maxLength="6"
                                        android:hint="Bag code"/>

                                </LinearLayout>


                            </LinearLayout>
                            <CheckBox android:id="@+id/checkbox_donate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Allow points donation"
                                android:onClick="onCheckboxClicked"
                                android:layout_gravity="center_horizontal"/>

                            <Button
                                android:layout_width="120dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/draw6"
                                android:text="Done"
                                android:textColor="@android:color/white"
                                android:textSize="20dp"
                                android:layout_marginBottom="10dp"
                                android:onClick="addDonation"/>
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

            </FrameLayout>
        </LinearLayout>

    </TabHost>
</LinearLayout>

